<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_edit_memo_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="com.pefe.pefememo.app.editor.MemoEditorViewImpl">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="end">



        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/memoEditorCopy"
            android:text="C"/>
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/memoEditorSave"
            android:text="S"/>
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/memoEditorClose"
            android:text="X"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <ToggleButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:id="@+id/memoEditorImportance"
            android:textOn="Imp"
            android:textOff="nImp"/>

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:id="@+id/memoEditorDirImg"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:id="@+id/memoEditorDirText"/>



    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/memoEditorContent"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:inputType="textMultiLine"
            android:ems="10"
            android:textIsSelectable="true" />
    </ScrollView>

</LinearLayout>
