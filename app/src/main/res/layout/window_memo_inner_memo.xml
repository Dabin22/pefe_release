<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rglrRoot"
    tools:showIn="@layout/window_memo">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/blueSecond"
        android:id="@+id/innerMemoBar"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:paddingBottom="3dp">

        <ToggleButton
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/memoImportance"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:textOff=""
            android:textOn=""
            android:background="@drawable/tbtn_importance"/>


        <Button
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:id="@+id/cleanBtn"
            android:background="@drawable/btn_clean"/>
        <Button
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_toLeftOf="@id/cleanBtn"
            android:layout_toStartOf="@id/cleanBtn"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:id="@+id/pasteBtn"
            android:background="@drawable/btn_paste"/>
        <Button
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_toLeftOf="@id/pasteBtn"
            android:layout_toStartOf="@id/pasteBtn"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:id="@+id/copyBtn"
            android:background="@drawable/btn_copy"/>



    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">
        <EditText
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/greyText"
            android:id="@id/title"
            android:hint="Title"
            android:textColorHint="@color/greyTextHint"/>

        <Spinner
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:id="@+id/dirSpinner" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:inputType="textMultiLine"
            android:ems="10"
            android:textColor="@color/greyText"
            android:id="@+id/content"
            android:hint="Content"
            android:textColorHint="@color/greyTextHint"/>

    </ScrollView>

    </LinearLayout>