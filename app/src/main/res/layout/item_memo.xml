<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card:cardCornerRadius="5dp"
    android:layout_margin="5dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/memoItemRoot"
        android:background="@color/white">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blueSecnd"
            android:padding="3dp">
            <Button
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:id="@+id/memoItemImportance"
                android:visibility="invisible"
                android:background="@drawable/btn_importance"/>
            <Button
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:id="@+id/memoItemDelete"
                android:background="@drawable/btn_delete"/>

            <Button
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_toStartOf="@id/memoItemDelete"
                android:layout_toLeftOf="@id/memoItemDelete"
                android:id="@+id/memoItemBack"
                android:visibility="gone"
                android:background="@drawable/btn_back"/>
            <Button
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_toStartOf="@id/memoItemBack"
                android:layout_toLeftOf="@id/memoItemBack"
                android:id="@+id/memoItemCopy"
                android:background="@drawable/btn_copy"/>

        </RelativeLayout>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/memoItemTitle"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:ems="10"
            android:textIsSelectable="false"
            android:focusable="false"
            android:focusableInTouchMode="true"
            android:hint="No Title"
            android:textColorHint="@color/greyTextHint"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/memoItemContent"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:ems="10"
                android:textIsSelectable="false"
                android:focusable="false"
                android:focusableInTouchMode="true"/>
        </ScrollView>
    </LinearLayout>
</android.support.v7.widget.CardView>