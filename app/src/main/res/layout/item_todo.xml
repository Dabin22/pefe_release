<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="3dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addTodoRoot"
        android:background="@color/white">

        <ToggleButton
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/todoOnceRepeatBtn"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:textOn=""
            android:textOff=""
            android:clickable="false"
            android:background="@drawable/tbtn_repeat_once"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/todoContent"
            android:layout_toRightOf="@id/todoOnceRepeatBtn"
            android:layout_toEndOf="@id/todoOnceRepeatBtn"
            android:textColor="@color/greyText"
            android:hint="To do"
            android:textColorHint="@color/greyTextHint"
            android:focusable="false"
            android:focusableInTouchMode="false"/>

        <ToggleButton
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/todoAddDelBtn"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:textOn=""
            android:textOff=""
            android:background="@drawable/tbtn_add_delete"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>